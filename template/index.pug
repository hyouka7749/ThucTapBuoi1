doctype html
html(lang="vi")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Trang Tải Ảnh
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/css/style.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css")
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Exo+2:ital,wght@0,100..900;1,100..900&family=Poller+One&family=Yuji+Boku&display=swap", rel="stylesheet")

  body
    // Header
    header.header.bg-dark.text-white
      .container
        .d-flex.justify-content-between.align-items-center.py-3
          h1.logo.text-white.mb-0(style="font-family: 'Poller One', serif;") Review Image Uploader
          nav
            ul.nav
              li.nav-item
                a.nav-link.text-white(href="/") Trang chủ
              li.nav-item
                a.nav-link.text-white(href="/about") Giới thiệu

    // Main content
    main.container
      .upload-container
        h2.mb-4.mt-3 Tải ảnh lên
        form(action="/upload", method="POST", enctype="multipart/form-data")
          .mb-3
            input.form-control(
              type="file",
              id="image",
              name="image",
              accept="image/*",
              required
            )
          .mb-3
            #imagePreview.mt-3
              .preview-placeholder.text-center.py-4
                i.bi.bi-image.text-muted(style="font-size: 3rem")
                p.mt-2.text-muted Chưa có ảnh được chọn
              img#preview.img-fluid.rounded.d-none(alt="Preview")

    script(src="https://code.jquery.com/jquery-3.7.1.min.js")
    script(src="/js/review.js")
